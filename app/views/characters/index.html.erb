<% provide(:title, '汉字检索') %>

<%= simple_form_for(@search, url: characters_path, html:{method: :get}) do |f| %>
    <%= f.input :structure, label: "结构", collection: Character.all_structures, selected: @structure, include_blank: true %>
    <%= f.input :zongbihua, label: "笔画", input_html: { value: @zongbihua } %>
    <%= f.submit "搜索", class: "btn btn-large btn-primary" %>
<% end %>

<%= will_paginate @characters %>

<section>
  <ul class="characters">
    <%= render @characters %>
  </ul>
</section>

