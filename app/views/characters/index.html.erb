<% provide(:title, '汉字检索') %>

<div class="row">
  <div class="span3">
<%= ext_form_for(@search, url: '/search/characters', html: { class: 'form-vertical' }, l: {max_width: '3', spacing: '0', layout: '1', label_width: '1'}) do |f| %>
    <%= render 'fields', f: f %>
    <%= f.submit "搜索", class: "btn btn-primary pull-right" %>
<% end %>
  </div>
  <div class="span8 offset1">


<section>
  <ul class="characters">
    <%= render @characters %>
  </ul>
</section>

    <%= will_paginate @characters %>
  </div>
</div>
