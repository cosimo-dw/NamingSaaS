<li xmlns="http://www.w3.org/1999/html">
  <% if message.is_user? %>
    <%= 'Customer said:' %>
  <% end %>
  <div id="inlinemessage">
  <span class="content"><%= message.content %>
  </span>
  <% if message.is_user? %>

      <%= button_to"delete", message, method: :delete,
                   data: { confirm: "You sure?" },
                   title: message.content, order_id: message.order_id, class: "btn btn-danger sm" %>
  <% end %>
  </div>
  </p>
  <span class="timestamp">
    Posted <%= time_ago_in_words(message.created_at) %> ago.
  </span>


</li>