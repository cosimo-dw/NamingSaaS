<li>
  <% if message.is_user? %>
    <%= '客户说：' %>
  <% end %>
  <span class="content"><%= message.content %></span>
  </p>
  <span class="timestamp">
    <%= (message.created_at) %>
  </span>
  <% if message.is_user? %>
      <%= link_to "删除", message_path(message, {order_id: message.order_id}),  method: :delete,
                  data: { confirm: "确定删除这条留言吗？" ,title: message.content}
                   %>
  <% end %>
</li>