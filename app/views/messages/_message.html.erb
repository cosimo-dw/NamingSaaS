<li>
  <% if message.is_user? %>
    <%= 'Customer said:' %>
  <% end %>
  <span class="content"><%= message.content %></span>
  </p>
  <span class="timestamp">
    Posted <%= time_ago_in_words(message.created_at) %> ago.
  </span>
  <% if message.is_user? %>
      <%= link_to "delete", message, method: :delete,
                  data: { confirm: "You sure?" },
                  title: message.content, order_id: message.order_id %>
  <% end %>
</li>