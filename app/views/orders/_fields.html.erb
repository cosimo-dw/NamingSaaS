<%= render 'shared/error_messages', object: f.object %>

<%= f.hidden_field :product_id, :value => @product.id %>
<%= f.ext_fields_for :product_attribute_values, l: {max_width: '12', spacing: '3', layout: '1', label_width: '2'} do |builder| %>
    <%= builder.hidden_field :product_attribute_id, :value => builder.object.attr_id %>
    <%= builder.send(builder.object.attr_type, builder.object.value_type, builder.object.attr_params) %>
<% end %>