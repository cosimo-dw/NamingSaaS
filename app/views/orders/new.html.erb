<% provide(:title, 'New Order') %>
<h1><%= @product.name %> Order</h1>

<div class="row">
  <div class="span6 offset3">
    <% if @product %>
        <%= simple_form_for(@order, html: {class: 'form-vertical' }) do |f| %>
            <%= render 'fields', f: f %>
            <%= f.submit "Create new order", class: "btn btn-large btn-primary" %>
        <% end %>
    <% end %>
  </div>
</div>