<% provide(:title, 'New Order') %>
<h1>New <%= @product.name %> Order</h1>

<div class="row">
  <div class="span6 offset3">
    <% if @product %>
        <%= ext_form_for(@order, :html => { :class => 'form-vertical' }) do |f| %>
            <%= render 'fields', f: f %>
            <%= f.submit "Create new orders", class: "btn btn-large btn-primary" %>
            <%= link_to "Back", current_user, class: "btn btn-large btn-primary" %>
        <% end %>
    <% end %>
  </div>
</div>
