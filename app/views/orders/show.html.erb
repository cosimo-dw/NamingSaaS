<h3><%= @order.product.name %>, <%= @order.user.name %>, <%= @order.price %> </h3>
<% if @order.product_attribute_values.any? %>
    <div id="product_attributes">
      <ul>
        <% @order.product_attribute_values.each do |v| %>
            <li><%= v.product_attribute.name %>： <%= v.send(v.value_type) %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<% if @order.answer.valid? %>
    <h3> 反馈信息 </h3>
    <% if @order_type == 'Personal' or @order_type == 'Company' %>
        <div>
          算命师所取的名字
        </div>
        <div>
          <%= @answer.chosen_name %>
        </div>
        <div>
          算命师的详细解释
        </div>
        <div>
          <%= @answer.content %>
        </div>
    <% else %>
        <div>
          算命师为您的八字所作的分析
        </div>
        <div>
          <%= @answer.content %>
        </div>
    <% end %>
<% end %>

<!-- 这一部分是管理员给取的名字以及解释 -->
<% if current_user.admin %>
    <div id="reply">


      <% if @order_type == 'Personal' or @order_type == 'Company' %>
          <h3>为客户取名</h3>
      <% else %>
          <h3>为客户算命</h3>
      <% end %>

      <% if not @order.answer.valid? %>
          <div class="depot-form">
            <%= form_for @answer do |f| %>
                <%= render 'reply_create_or_update', f: f %>
            <% end %>
          </div>
      <% else %>
          <div class="depot-form">
            <%= form_for(@answer, url: answer_path(@order.answer)) do |f| %>
                <%= render 'reply_create_or_update', f: f %>
            <% end %>
          </div>
      <% end %>
    </div>

    <!-- for test!! -->
    <!-- render :partial => 'reply_create_or_update' -->
<% end %>


<h3>新留言</h3>
<div class="depot-form">
  <%= form_for @message do |f| %>
      <%= f.text_area :content %>
      <%= f.hidden_field :order_id, :value => @order.id %>
      <%= f.submit "留言", :class => "btn  btn-primary" %>
      <!-- f.submit "留言", class: "btn btn-large btn-primary" -->
  <% end %>
</div>

<% if @order.messages.any? %>
    <h3>所有留言(<%= @order.messages.count %>)</h3>
    <ol class="messages">
      <%= render @messages %>
    </ol>
    <%= will_paginate @messages %>
<% end %>





