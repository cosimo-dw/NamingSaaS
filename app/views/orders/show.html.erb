
<div class="row">
  <aside class="span8">
    <section>
      <h1><%= @order.product.name%>, <%= @order.user.name %>, <%= @order.price %></h1>
      <div id="ordershow">
      <% if @order.product_attribute_values.any? %>
          <div id="product_attributes">
            <ul>
              <% @order.product_attribute_values.each do |v| %>
                  <li><%= v.product_attribute.name %>, <%= v.value %></li>
              <% end %>
            </ul>
          </div>
      <% end %>
      </div>
    </section>
  </aside>
  <div class="span4">


    <div class="row">
        <% if @order.messages.any? %>
          <h3>所有留言(<%= @order.messages.count %>)</h3>

            <ol class="messages">
              <%= render @messages %>
            </ol>
            <%= will_paginate @messages %>
        <% end %>
    </div>
    <div class="row">
      <div id="inputmessage">
      <%= ext_form_for(Message.new, :html => { :class => 'form-vertical' }) do |f| %>
          <%= f.label '新留言' %>
          <%= f.text_area :content, :id => 'message_content'%>
          <%= f.hidden_field :order_id, :value => @order.id%>
          <%= f.hidden_field :is_user, :value => true %>
          <%= f.submit  "留言", class: "btn btn-success" %>
      <% end %>
      </div>
    </div>
  </div>
</div>










