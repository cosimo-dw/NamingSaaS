<li>
    <div>
    <% if @user.admin? %>
        <div class="span2">
          <%= link_to order.user.name, order.user %>
        </div>
    <% end %>
    <div class="span1">
      <%= link_to order.id, order %>
    </div>
    <div class="span1">
      <%= order.product.name %>
    </div>
    <div class="span1">
      <%= order.price %>
    </div>

  </div>
  <span class="timestamp">
    <%= l order.created_at, format: :long %>
  </span>

    <% if order.answer %>
      <div class="span1">
        已反馈
      </div>
    <% end %>
    <% if (order.new_admin_message and not current_user.admin?) or (order.new_user_message and current_user.admin?)%>
      <div class="span1">
        新留言！
      </div>
    <% end %>


</li>